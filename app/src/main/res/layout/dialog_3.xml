<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    android:background="@color/red"
    android:id="@+id/layout_0">

    <TextView
        android:id="@+id/msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        android:text="TextView"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_arrow_back_24"


        app:layout_constraintTop_toBottomOf="@+id/msg3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_check_24"
        android:drawablePadding="20dp"

        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/msg3"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_arrow_forward_24"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@+id/msg3" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:drawableTop="@drawable/baseline_access_time_24"

        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/msg3" />

</androidx.constraintlayout.widget.ConstraintLayout>